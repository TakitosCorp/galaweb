<!DOCTYPE html>
<html lang="es">

<%- include('components/head') %>

<body class="text-gray-800 overflow-x-hidden">
  <div class="bg-overlay"></div>
  <div class="fixed inset-0 z-0" id="bubbles-container"></div>
  <%- include('components/header') %>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 pt-24">
    <section class="py-10">
      <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl p-6 sm:p-10">
        <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-16 relative inline-block left-1/2 -translate-x-1/2">
          Mis Videos Recientes ðŸ“¹
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% for (let i = 0; i < 10; i++) { %>
          <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
            <div class="p-4 bg-gradient-primary text-white font-bold text-center">
              Video Reciente
            </div>
            <div class="p-4">
              <div class="aspect-video w-full rounded-lg overflow-hidden mb-4">
                <lite-youtube videoid="" vnum="<%= i %>" class="w-full h-full rounded-lg"></lite-youtube>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <div class="mt-10 text-center">
          <a href="https://www.youtube.com/@galayaki" class="inline-flex items-center gap-2 bg-gradient-primary text-white font-bold py-3 px-6 rounded-full shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <i class="fab fa-youtube"></i> Ver mÃ¡s videos en YouTube
          </a>
        </div>
      </div>
    </section>
  </main>

  <%- include('components/footer') %>
  <script type="module" src="/public/js/yt.js"></script>

  <!-- Script para cargar videos del canal -->
  <script>
    const loadVideo = (liteYT) => {
      const cid = "<%= cid %>"; // ID del canal de GalaYaki pasado desde EJS
      const channelURL = encodeURIComponent(`https://www.youtube.com/feeds/videos.xml?channel_id=${cid}`);
      const reqURL = `https://api.rss2json.com/v1/api.json?rss_url=${channelURL}`;

      fetch(reqURL)
        .then((response) => response.json())
        .then((result) => {
          const videoNumber = liteYT.getAttribute("vnum");
          const link = result.items[videoNumber].link;
          const id = link.substr(link.indexOf("=") + 1);
          liteYT.setAttribute("videoid", id);
        })
        .catch(error => {
          console.error("Error cargando videos:", error);
        });
    };

    document.addEventListener('DOMContentLoaded', () => {
      const liteYTs = document.getElementsByTagName("lite-youtube");
      for (let i = 0, len = liteYTs.length; i < len; i++) {
        loadVideo(liteYTs[i]);
      }
    });
  </script>

  <script src="/public/js/main.js"></script>
</body>

</html>